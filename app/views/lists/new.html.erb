<h1>新規投稿</h1>
<% if @list.errors.any? %>
  <%= @list.errors.count %>件のエラーが発生しました
  <ul>
    <% @list.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<!--↑8章で大幅追加-->
<%= form_with model: @list,url:'/lists',method: :post do |f| %>

  <h4>タイトル</h4>
  <%= f.text_field :title %>

  <h4>本文</h4>
  <%= f .text_area :body %>
  
  <h4>画像</h4><!--6章で追加-->
 <%= f.file_field :image, accept: "image/*" %>

  <%= f .submit '投稿' %>
<% end %>